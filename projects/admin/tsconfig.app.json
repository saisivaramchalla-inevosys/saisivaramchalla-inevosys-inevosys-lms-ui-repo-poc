/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  // Extends the base TypeScript configuration
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Specifies the output directory for the compiled files
    "outDir": "../../out-tsc/app",
    // Specifies the types to include in the compilation
    "types": []
  },
  "files": [
    // Specifies the entry point file
    "src/main.ts"
  ],
  "include": [
    // Includes all TypeScript declaration files in the src directory
    "src/**/*.d.ts"
  ]
}
